{
  "collectCoverage": true,
  "coverageReporters": ["lcov", "text"],
  "collectCoverageFrom": ["**/src/**/*.ts", "**/config/**/*.ts"],
  "preset": "ts-jest",
  "testMatch": ["**/*.test.ts"],
  "moduleFileExtensions": ["js", "ts", "json"],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/dist/",
    "/coverage/",
    "/.devcontainer/",
    "/.nyc_output/",
    "/.vscode/",
    "/src/helpers/index.ts"
  ]
}
